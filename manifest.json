{
  "manifest_version": 3,
  "name": "showzest",
  "description": "Enhanced Zillow home detail pages",
  "version": "1.0",
  "author": "RobertBattaglia",
  "minimum_chrome_version": "88",
  "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.zillow.com/"],
  "background": {
    "service_worker": "build/background.js"
  }
}
